celery -A django_celery worker -l INFO -f logs/celery.log --autoscale=3,1 --without-heartbeat --without-gossip --without-mingle --pool=solo --concurrency=1
sleep 15
celery -A django_celery beat --scheduler django_celery_beat.schedulers:DatabaseScheduler -l INFO -f logs/celery.log
