#!/bin/bash
# The script configures device for using greenponik
# Distribution Raspbian Buster
# works on:
#           -Raspberry Pi Zero W
#           -Raspberry Pi 3 B+
#           -Raspberry Pi 3 A+
# Licence: no licence private script copyright greenponik sas
# Author: Mickael Lehoux <mickael.lehoux@greenponik.com>

set -x

echo "starting all servers: gunicorn, celery worker, celery beat..."

# bash $(pwd)/bin/celery-worker-stop
# sleep 5
bash $(pwd)/bin/celery-worker-start
sleep 5
bash $(pwd)/bin/celery-beat-start
# sleep 5
# bash $(pwd)/bin/django-start
# sleep 5
# bash $(pwd)/bin/celery-flower-start