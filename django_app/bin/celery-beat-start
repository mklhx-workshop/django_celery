set -x

# while [ celery -A django_celery status | grep -c "OK" -ne 1 ]
# do 
#     sleep 1
# done
echo "starting celery beat..."
celery -A django_celery beat --pidfile="" --detach -l INFO -f logs/celery/celery-beat.log --scheduler django_celery_beat.schedulers:DatabaseScheduler
echo "celery beat started"