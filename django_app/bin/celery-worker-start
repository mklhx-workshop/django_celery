#!/bin/bash
# The script configures device for using greenponik
# Distribution Raspbian Buster
# works on:
#           -Raspberry Pi Zero W
#           -Raspberry Pi 3 B+
#           -Raspberry Pi 3 A+
# Licence: no licence private script copyright greenponik sas
# Author: Mickael Lehoux <mickael.lehoux@greenponik.com>

set -x

while [ ! $(ping -c 1 broker | grep -cF "1 received") ]
do
    sleep 1
done
echo "starting celery worker..."
celery -A django_celery worker -E --pidfile="" -l DEBUG -f logs/celery/celery-worker.log --without-heartbeat --without-gossip --without-mingle --pool=solo --concurrency=1
